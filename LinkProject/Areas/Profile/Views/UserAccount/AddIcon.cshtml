
@{
    ViewData["Title"] = "AddIcon";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
}


<form asp-action="AddIcon" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>نام آیکن</label>
        <input type="text" name="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>انتخاب فایل آیکن</label>
        <input type="file" name="iconFile" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">ذخیره</button>
</form>